pipeline{
    agent any // the current machine where we have to run the pipeline 
    tools{
        maven 'mymaven'
    }
    stages{
        stage('Checkout Code'){
            steps{
                git 'https://github.com/manoj-kimkhabwala/DevOpsCodeDemo.git'
            }
        }
        stage('Compile Code'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('Test code'){
            steps{
                sh 'mvn test'
            }
        }
        stage('package code'){
            steps{
                sh 'mvn package'
            }
        }

        stage('Build Image'){
            steps{
                sh 'docker build -t myaddressbook .'
            }
        }

         stage('push image to dockerhub'){
            steps{
                withCredentials([string(credentialsId: 'DOCKER_HUB_PWD', variable: 'DOCKER_HUB_PWD')])
                {
                     sh 'docker login -u manojkimkhabwala -p ${DOCKER_HUB_PWD}'
                               
                    sh 'docker tag myaddressbook somanojkimmanojkimkhabwalakhabwalanal04/myaddressbook'
                    sh 'docker push manojkimkhabwala/myaddressbook'
                }     
            }       
        }
    }

}
