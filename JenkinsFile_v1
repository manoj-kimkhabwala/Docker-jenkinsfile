pipeline{
    agent any // the current machine where we have to run the pipeline 
    tools{
        maven 'mymaven'
    }
    stages{
        stage('Checkout Code'){
            steps{
                git 'https://github.com/manoj-kimkhabwala/DevOpsCodeDemo.git'
            }
        }
        stage('Compile Code'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('Test code'){
            steps{
                sh 'mvn test'
            }
        }
        stage('package code'){
            steps{
                sh 'mvn package'
            }
        }

        stage('Build Image'){
            steps{
                sh 'docker build -t myaddressbook .'
            }
        }

    }

}
